.container-fluid.edit-user-content
  .row
    .col-md-12
      .jumbotron.edit-entry
        .field
          %h1 Edit User Information
        - if @user && (@user.errors.keys.length > 0 || @errors.length > 0)
          %div{class: 'alert alert-danger'}
            Please fix the following errors:
            %ul.error-list
              - @user.errors.each do |k,v|
                %li= v
              - @errors.each do |e|
                %li= e
        = form_for(@user, url: user_update_path, role: 'form') do |f|
          .form-group
            = f.label :email
            %br
            = f.email_field :email, autofocus: true, placeholder: 'Email', class: 'form-control edit-user-input'
          .form-group
            = f.label :display_name
            %br
            = f.text_field :display_name, placeholder: 'Display name (optional)', class: 'form-control edit-user-input'
          .form-group
            = f.label :current_password
            %br
            = f.password_field :current_password, autocomplete: "off", placeholder: 'Password', class: 'form-control edit-user-input'
          .form-group
            = f.label :new_password
            %br
            = f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'form-control edit-user-input'
          .form-group
            = f.label :new_password_confirmation
            %br
            = f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Password', class: 'form-control edit-user-input'
          .form-group.field
            = f.submit "Update", class: 'btn btn-default btn-large'
          .form-group.field
            = link_to "cancel", root_path, class: 'btn btn-link'
